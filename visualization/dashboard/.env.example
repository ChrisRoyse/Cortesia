# LLMKG Dashboard Environment Configuration

# WebSocket server URL (Phase 1 server)
REACT_APP_WEBSOCKET_URL=ws://localhost:8080

# MCP server URL (Phase 1 MCP server)
REACT_APP_MCP_SERVER_URL=http://localhost:3000

# Application version
REACT_APP_VERSION=2.0.0

# Build timestamp (automatically set during build)
REACT_APP_BUILD_TIME=

# Environment (development, production)
NODE_ENV=development

# Enable source maps in production (optional)
GENERATE_SOURCEMAP=false

# Disable build optimization for debugging (development only)
FAST_REFRESH=true

# Skip preflight check (if needed for development)
SKIP_PREFLIGHT_CHECK=true

# Browser to open during development
BROWSER=default

# Port for development server (default: 3000)
PORT=3000

# Host for development server (default: localhost)
HOST=localhost

# Enable HTTPS in development (optional)
HTTPS=false

# Proxy API requests to backend server
PROXY=http://localhost:3000