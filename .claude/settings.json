{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/orchestrator.py",
            "timeout": 300
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command", 
            "command": "python3 .claude/hooks/orchestrator.py --final-review",
            "timeout": 300
          }
        ]
      }
    ]
  },
  "permissions": {
    "allowedTools": ["Task", "Read", "Write", "Edit", "Bash"],
    "permissionMode": "acceptAll"
  }
}